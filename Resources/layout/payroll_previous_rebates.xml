<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREVIOUS MONTH'S REBATES:"
        android:textSize="48px"
        android:textColor="#ffd700"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/previousZakatByEmployee"
        android:hint="Zakat paid by employee"
        android:textSize="40px"
        android:inputType="numberDecimal"
        android:maxLength="20"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/previousZakatByPayroll"
        android:hint="Zakat via payroll"
        android:textSize="40px"
        android:inputType="numberDecimal"
        android:maxLength="20"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/previousDepartureLevy"
        android:hint="Departure Levy"
        android:textSize="40px"
        android:inputType="numberDecimal"
        android:maxLength="20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/continuePayroll8"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Continue"
        android:textSize="23dp"
        android:backgroundTint="#ffd700"
        android:textColor="@android:color/white"/>
</LinearLayout>

