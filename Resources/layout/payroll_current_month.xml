<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CURRENT MONTH'S REMUNERATION:"
        android:textSize="48px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentMonthRemuneration"
        android:hint="Current month’s remuneration"
        android:textSize="40px"
        android:inputType="numberDecimal"
        android:maxLength="20"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BIK"
        android:hint="Benefit-In-Kind(BIK)"
        android:textSize="40px"
        android:inputType="numberDecimal"
        android:maxLength="20"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VOLA"
        android:hint="Value Of Living Accomodation(VOLA)"
        android:textSize="40px"
        android:inputType="numberDecimal"
        android:maxLength="20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/tett1"/>
    <Button
        android:id="@+id/continuePayroll2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Continue"
        android:textSize="23dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"/>
</LinearLayout>
